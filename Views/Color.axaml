<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.Color">
    
    <Grid>
        <StackPanel>
            <TextBlock Text="3. Couleur de l'armoire" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">           
                <Button Background="SaddleBrown" Width="50" Height="50" Click="SelectColor" Tag="Marron"/>
                <Button Background="White" Width="50" Height="50" Click="SelectColor" Tag="White"/>
                <TextBlock x:Name="SelectedColorText" Text="Couleur sélectionnée : White" 
                HorizontalAlignment="Center" FontSize="16" Margin="10"/>
            </StackPanel>

        </StackPanel>

        

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
            <Button Content="Back" Click="GoToHeight" Margin="5,0"/>
            <Button Content="Next" Click="GoToDoor" Margin="5,0"/>
        </StackPanel>

        <ContentControl x:Name="MainContent" Margin="50,0,0,0"/>
    </Grid>

</UserControl>
