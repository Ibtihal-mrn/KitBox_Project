<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="KitBox_Project.Views.LoginDialog"
        Title="Connexion Vendeur" Width="300" Height="200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <TextBox x:Name="UsernameBox" Watermark="Utilisateur" Width="200"/>
        <TextBox x:Name="PasswordBox" Watermark="Mot de passe" Width="200" PasswordChar="●"/>
        <Button Content="Se connecter" Width="200" Click="OnLoginClicked"/>
        <TextBlock x:Name="ErrorText" Foreground="Red" IsVisible="False" Text="Erreur d'identifiants."/>
    </StackPanel>
</Window>
