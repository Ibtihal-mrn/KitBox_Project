<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.Height">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- Titre -->
            <RowDefinition Height="Auto" />  <!-- Hauteur ComboBox -->
            <RowDefinition Height="Auto" />  <!-- Avertissements -->
            <RowDefinition Height="Auto" />  <!-- Liste des stocks -->
            <RowDefinition Height="Auto" />  <!-- Boutons -->
            <RowDefinition Height="*" />     <!-- ContentControl -->
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="3. Hauteur du casier" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Grid.Row="0" />

        <!-- Label Hauteur et ComboBox -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="Hauteur :" Margin="0,0,0,5" HorizontalAlignment="Center" />
            <ComboBox Name="Hauteur" Width="200" HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Avertissements -->
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
            <!-- Alerte de stock faible -->
            <TextBlock Name="StockWarning" Foreground="Red" FontSize="16"
                      IsVisible="False" HorizontalAlignment="Center" />
            
            <!-- ComboBox pour choisir une couleur alternative -->
            <ComboBox Name="AlternateColorComboBox" Width="250" HorizontalAlignment="Center" 
                     Margin="0,10,0,0" IsVisible="False" />
            
            <!-- Message d'erreur -->
            <TextBlock x:Name="ErrorMessage" Text="Veuillez sélectionner une hauteur." 
                      Foreground="Red" IsVisible="False" HorizontalAlignment="Center" 
                      Margin="0,10,0,0" />
        </StackPanel>

        <!-- Liste des articles en stock faible -->
        <Border Name="LowStockPanel" Grid.Row="3" BorderBrush="Orange" BorderThickness="1" 
               Margin="0,10,0,0" Padding="10" CornerRadius="5" IsVisible="False" 
               Width="800" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Articles en stock limité:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox Name="LowStockItemsList" Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Boutons Back et Next -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Back" Click="GoToSize" Margin="5,0"/>
            <Button Content="Next" Click="GoToDoor" Margin="5,0"/>
        </StackPanel>

        <!-- MainContent dans sa propre rangée -->
        <ContentControl x:Name="MainContent" Grid.Row="5" Margin="0,20,0,0"/>
    </Grid>
</UserControl>