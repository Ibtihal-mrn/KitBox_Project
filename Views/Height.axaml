<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.Height">
    
    <Grid>
        <StackPanel>
            <TextBlock Text="2. Hauteur du casier" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
            
            <TextBlock Text="Hauteur :" Margin="0,50,0,5" HorizontalAlignment="Center"/>
            <ComboBox Name="Longueur" Width="200" HorizontalAlignment="Center">
                <ComboBoxItem Content="27cm" />
                <ComboBoxItem Content="37cm" />
                <ComboBoxItem Content="47cm" />
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
            <Button Content="Back" Click="GoToSize" Margin="5,0"/>
            <Button Content="Next" Click="GoToColor" Margin="5,0"/>
        </StackPanel>

        <ContentControl x:Name="MainContent" Margin="50,0,0,0"/>
    </Grid>

</UserControl>
