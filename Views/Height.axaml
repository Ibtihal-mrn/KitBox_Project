<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.Height">
    
    <Grid>
        <!-- Définir des lignes pour organiser les éléments -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Titre -->
            <RowDefinition Height="Auto" /> <!-- ComboBox -->
            <RowDefinition Height="Auto" /> <!-- Alerte de stock faible -->
            <RowDefinition Height="Auto" /> <!-- Liste des articles en stock faible -->
            <RowDefinition Height="Auto" /> <!-- Espace pour les boutons -->
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="2. Hauteur du casier" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Grid.Row="0" />

        <!-- Label Hauteur -->
        <TextBlock Text="Hauteur :" Margin="0,50,0,5" HorizontalAlignment="Center" Grid.Row="1" />

        <!-- ComboBox pour la Hauteur -->
        <ComboBox Name="Hauteur" Width="200" HorizontalAlignment="Center" Grid.Row="1" />

        <!-- Alerte de stock faible -->
        <TextBlock Name="StockWarning" Foreground="Red" FontSize="16"
                IsVisible="False" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="2" />

        <TextBlock x:Name="ErrorMessage" Text="Veuillez sélectionner une hauteur." Foreground="Red" IsVisible="False" />
                
        <!-- Liste des articles en stock faible -->
        <Border Name="LowStockPanel" BorderBrush="Orange" BorderThickness="1" Margin="0,10,0,0" 
               Padding="10" CornerRadius="5" IsVisible="False" Width="800" HorizontalAlignment="Center" Grid.Row="3">
            <StackPanel>
                <TextBlock Text="Articles en stock limité:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox Name="LowStockItemsList" Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Boutons Back et Next (en bas) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0" Grid.Row="4">
            <Button Content="Back" Click="GoToSize" Margin="5,0"/>
            <Button Content="Next" Click="GoToColor" Margin="5,0"/>
        </StackPanel>

            

        <ContentControl x:Name="MainContent" Margin="50,0,0,0"/>
    </Grid>
</UserControl>
