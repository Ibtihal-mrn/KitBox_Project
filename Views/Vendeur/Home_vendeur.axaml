<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="clr-namespace:KitBox_Project.ViewModels"
    xmlns:models="clr-namespace:KitBox_Project.Models"
    x:Class="KitBox_Project.Views.Home_vendeur"
    x:DataType="vm:SellerViewModel">

    <UserControl.DataContext>
        <vm:SellerViewModel/>
    </UserControl.DataContext>

    <Grid >
        <TextBlock Text="Client's Orders"
                   FontSize="60"
                   FontFamily="avares://KitBox_Project/Fonts#Anton"
                   HorizontalAlignment="Center"/>

        <!-- Affichage des commandes -->
        <ScrollViewer Margin="50,100,50,50" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Orders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:ConfirmedOrder">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                            <StackPanel>
                                <!-- Binding sur OrderId -->
                                <TextBlock Text="{Binding OrderId}" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>

                                <!-- Liste des articles de la commande -->
                                <ItemsControl ItemsSource="{Binding Articles}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="models:Article">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <!-- Afficher chaque article une seule fois, avec la quantitÃ© totale -->
                                                <TextBlock Text="{Binding Reference}" Width="200"/>
                                                <TextBlock Text="{Binding Color}" Width="100"/>
                                                <TextBlock Text="{Binding Quantity, StringFormat='Qty: {0}'}" Width="60"/>
                                                <TextBlock Text="{Binding Code}" Width="100"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
