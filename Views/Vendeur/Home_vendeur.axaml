<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.Home_vendeur">

    <Grid>
       <TextBlock Text="KitBox app côté vendeur"
                       FontSize="60"
                       FontFamily="avares://KitBox_Project/Fonts#Anton"
                       HorizontalAlignment="Center"/>
        
        <!-- Utilisation d'une StackPanel pour espacer les boutons -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <Button Content="Ajouter un nouveau vendeur" Width="200" Click="GoToAddUser"/>
            <Button Content="Se déconnecter" Width="200" Click="GoToFirstPage"/>
        </StackPanel>
    </Grid>
</UserControl>
