<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.AddUser">

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="1*,1*">

        <!-- TITRE (sur 2 colonnes) -->
        <TextBlock Grid.ColumnSpan="2"
                   Text="Ajouter un nouveau vendeur"
                   FontSize="40"
                   FontFamily="avares://KitBox_Project/Fonts#Anton"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20" />

        <!-- LISTE UTILISATEURS à gauche -->
        <Border Grid.Row="1" Grid.Column="0" Margin="20" Background="#F0F0F0" CornerRadius="10" Padding="10">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Utilisateurs existants" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
                    <ListBox x:Name="ListeUtilisateurs" Width="300">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="* Auto" Margin="5">
                                    <TextBlock Text="{Binding}" Grid.Column="0" TextWrapping="Wrap"/>
                                    <Button Content="Supprimer" Grid.Column="1" Click="SupprimerUtilisateur" Margin="5,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- FORMULAIRE à droite -->
        <Border Grid.Row="1" Grid.Column="1" Margin="20" Background="#F8F8F8" CornerRadius="10" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="10">
                <TextBox x:Name="MatriculeBox" Width="250" Watermark="Matricule"/>
                <TextBox x:Name="PasswordBox" Width="250" Watermark="Ajouter le mot de passe" PasswordChar="●"/>
                <TextBox x:Name="ConfirmPasswordBox" Width="250" Watermark="Répéter le mot de passe" PasswordChar="●"/>
                <ComboBox x:Name="Rôle" Width="250">
                    <ComboBoxItem Content="Superviseur"/>
                    <ComboBoxItem Content="Vendeur"/>
                </ComboBox>
                <Button Content="Ajouter" Width="250" Click="AjouterUtilisateur"/>
                <Button Content="Retour" Width="250" Click="GoToHomeVendeur"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
