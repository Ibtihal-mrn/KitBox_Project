<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.AddUser">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- TITRE -->
        <TextBlock Text="Ajouter un nouveau vendeur"
                FontSize="60"
                FontFamily="avares://KitBox_Project/Fonts#Anton"
                HorizontalAlignment="Center"
                Grid.Row="0" />

        <!-- FORMULAIRE -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBox x:Name="MatriculeBox" Width="200" Watermark="Matricule"/>
            <TextBox x:Name="PasswordBox" Width="200" Margin="10" Watermark="Mot de passe"/>
            <ComboBox x:Name="RÃ´le" Width="200" Margin="10">
                <ComboBoxItem Content="Superviseur"/>
                <ComboBoxItem Content="Vendeur"/>
            </ComboBox>
            <Button Content="Ajouter" Width="200" Click="AjouterUtilisateur"/>
            <Button Content="Retour" Width="200" Click="GoToHomeVendeur"/>
        </StackPanel>

        <!-- LISTE DES UTILISATEURS -->
        <ListBox x:Name="ListeUtilisateurs" Grid.Row="2" Width="400" Height="200" HorizontalAlignment="Center">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding}" Width="250"/>
                        <Button Content="Supprimer" Click="SupprimerUtilisateur"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>

</UserControl>
