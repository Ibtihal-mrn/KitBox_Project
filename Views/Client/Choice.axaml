<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.Choice">
    
    <Grid>
        <StackPanel>

            <TextBlock Text="5. Make your choice" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
                <Button Content="Back" Click="GoToDoor" Margin="5,0"/>
                <Button Content="Stacking a locker" Click="GoToColor" Margin="5,0"/>
                <Button Content="Set up a new cabinet" Click="GoToColor" Margin="5,0"/>
                <Button Content="Confirm the order" Click="GoToConfirmation" Margin="5,0"/>
                <Button Content="Summary of order" Click="GoToOrder" Margin="5,0"/>
            </StackPanel>

            <!-- <Button Content="Abandonner la transaction" HorizontalAlignment="Center" Click="GoToFirstPage"/> -->

        </StackPanel>

        <ContentControl x:Name="MainContent" Margin="50,0,0,0"/>
    </Grid>

</UserControl>