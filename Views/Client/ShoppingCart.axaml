<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.ShoppingCart">

  <Grid Margin="20">
    <TextBlock TextWrapping="Wrap" Text="Kit Box"
    FontSize="24"
    FontFamily="avares://KitBox_Project/Fonts#Anton"
    HorizontalAlignment="Center"/>

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="30,40,0,0">
      <TextBlock TextWrapping="Wrap" Text="Your cart is empty"
      FontSize="22"
      FontWeight="Bold"/>

      <TextBlock TextWrapping="Wrap" Margin="0,15,0,0">
        When you add products to your cart, they will appear here.
      </TextBlock>

      <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">
       Can't find your products? Make sure you've added them to your cart.
      </TextBlock>

      <Button Content="Go to home" Margin="0,20,0,0" Click="GoToHome"/>

    </StackPanel>
  </Grid> 
</UserControl>