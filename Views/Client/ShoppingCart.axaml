<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:KitBox_Project.ViewModels"
    x:Class="KitBox_Project.Views.Client.ShoppingCart"
    x:DataType="vm:ShoppingCartViewModel"
    x:Name="cart">

    <UserControl.Resources>
        <vm:ShoppingCartViewModel x:Key="ViewModel"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Spacing="20">
            <TextBlock Text="Mon Panier" FontSize="24" FontWeight="Bold" />

            <ItemsControl x:Name="itemsCtrl" ItemsSource="{Binding CartItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                            <StackPanel Orientation="Horizontal" Spacing="20">
                                <StackPanel>
                                    <TextBlock Text="{Binding Reference}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Dimensions}"/>
                                    <TextBlock Text="{Binding Color, StringFormat='Couleur : {0}'}"/>
                                    <TextBlock Text="{Binding Quantity, StringFormat='QuantitÃ© : {0}'}"/>
                                    <TextBlock Text="{Binding SellingPrice, StringFormat='Prix unitaire : {0:0.00} â‚¬'}"/>
                                    <TextBlock Text="{Binding TotalPrice, StringFormat='Total : {0:0.00} â‚¬'}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Button Content="âˆ’"
                                                Width="30" Height="30"
                                                Command="{Binding Source={StaticResource ViewModel}, Path=DecreaseQuantityCommand}"
                                                CommandParameter="{Binding}" />

                                        <Button Content="+"
                                                Width="30" Height="30"
                                                Command="{Binding Source={StaticResource ViewModel}, Path=IncreaseQuantityCommand}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="ðŸ—‘" 
                                                Width="40" Height="40"
                                                Command="{Binding Source={StaticResource ViewModel}, Path=RemoveItemCommand}"
                                                CommandParameter="{Binding}" />


                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Nombre d'articles :"/>
                <TextBlock Text="{Binding TotalItemCount}" FontWeight="Bold"/>
                <TextBlock Text=" | Total :"/>
                <TextBlock Text="{Binding TotalPrice, StringFormat=' {0:0.00} â‚¬'}" FontWeight="Bold"/>
            </StackPanel>

            <Button Content="Vider le panier"
                    Command="{Binding ClearCartCommand}"
                    IsEnabled="{Binding !IsCartEmpty}"/>

            <Button Content="Retour Ã  l'accueil"
                    Click="OnHomeButtonClick"/>
            <Button Content="Confirmer la commande" Click="GoToConfirmation" Margin="5,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>