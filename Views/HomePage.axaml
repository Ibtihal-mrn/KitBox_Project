<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.HomePage">

    <Grid>
        <!-- StackPanel pour empiler les éléments de manière verticale -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <!-- Titre -->
            <TextBlock Text="Kit Box"
                       FontSize="60"
                       FontFamily="avares://KitBox_Project/Fonts#Anton"
                       HorizontalAlignment="Center"/>
            
            <!-- Bouton Start -->
            <Button Content="Start" HorizontalAlignment="Center" Click="GoToDesign"/>
        </StackPanel>

        <!-- Slogan -->
        <TextBlock x:Name="MovingText"
                   Text="From Store to Home, a Smarter Way to Build Your Ideal Storage!"
                   FontSize="17"
                   FontFamily="avares://KitBox_Project/Fonts#Anton"
                   HorizontalAlignment="Left"
                   Foreground="Black"
                   Margin="20,20,0,0"/>

        <!-- Contenu principal de l'application -->
        <ContentControl x:Name="MainContent" Margin="50,0,0,0"/>
    </Grid>
</UserControl>
