<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.HelpSupport">

    <Grid>
        <TextBlock Text="Bienvenue sur la page Help and Support"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>
        
        <StackPanel Orientation="Vertical" Margin="20">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Border Width="48" Height="48" CornerRadius="24" Background="#EEEEEE" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="avares://KitBox_Project/Assets/commande.png"
                           Width="29" Height="29" Stretch="Uniform"/>
                </Border>
                <Button Content="Passer ma commande" FontSize="14" Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" Click="OnPasserCommandeClicked"/>
            </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10">
                <Border Width="48" Height="48" CornerRadius="24" Background="#EEEEEE" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="avares://KitBox_Project/Assets/etudiant.png"
                        Width="28" Height="28" Stretch="Uniform"/>
                </Border>
                <TextBlock Text="Réduction étudiante" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <Border Width="48" Height="48" CornerRadius="24" Background="#EEEEEE" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="avares://KitBox_Project/Assets/facture.png"
                        Width="28" Height="28" Stretch="Uniform"/>
                </Border>
                <TextBlock Text="Retrouver ma facture" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <Border Width="48" Height="48" CornerRadius="24" Background="#EEEEEE" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="avares://KitBox_Project/Assets/livraison.png"
                        Width="28" Height="28" Stretch="Uniform"/>
                </Border>
                <TextBlock Text="Livraison" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <ContentControl x:Name="MainContent" Margin="50,0,0,0"/>
    </Grid>
</UserControl>
