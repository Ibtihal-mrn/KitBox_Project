<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.Delivery">

  <Grid Margin="20">
    <TextBlock Text="Kit Box"
               FontSize="24"
               FontFamily="avares://KitBox_Project/Fonts#Anton"
               HorizontalAlignment="Center"/>
    
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="30,40,0,0">
      <Button Content="← Back"
              Background="Transparent"
              BorderBrush="Transparent"
              Foreground="Black"
              Padding="0"
              HorizontalAlignment="Left"
              Click="OnRetourClick"/>

      <TextBlock Text="Delivery"
                 FontSize="22"
                 FontWeight="Bold"
                 Margin="0,10,0,0"/>

      <TextBlock TextWrapping="Wrap" Margin="0,15,0,0">
        <Run FontWeight="Bold">Your order will be ready for pickup in-store</Run> as soon as it has been received and prepared. <Run FontWeight="Bold">We will send you an email</Run> to notify you when your package is available.
      </TextBlock>

      <TextBlock Margin="0,10,0,0">
      Be sure to come and pick it up at the store to complete your purchase.
      </TextBlock>
    </StackPanel>
  </Grid>

</UserControl>
