<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.StudentDiscount">

  <Grid Margin="20">
    <TextBlock Text="Kit Box"
               FontSize="24"
               FontFamily="avares://KitBox_Project/Fonts#Anton"
               HorizontalAlignment="Center"/>
    
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="30,40,0,0">
      <Button Content="← Back"
              Background="Transparent"
              BorderBrush="Transparent"
              Foreground="Black"
              Padding="0"
              HorizontalAlignment="Left"
              Click="OnRetourClick"/>

      <TextBlock Text="What's about student discount ?"
                 FontSize="22"
                 FontWeight="Bold"
                 Margin="0,10,0,0"/>

      <TextBlock Margin="0,15,0,0">
        If you are a student, you can get a 10% discount in-store.  
      </TextBlock>

      <TextBlock Margin="0,15,0,0" FontWeight="Bold" FontSize="16">
        How to get your student discount in-store :
      </TextBlock>

      <TextBlock Margin="0,10,0,0">
        Simply show your student card along with a valid ID to a store associate.
        This discount offer is currently valid only for students in Belgium or France.
      </TextBlock>
    </StackPanel>
  </Grid>
</UserControl>
