<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.PlaceMyOrder">

  <Grid Margin="20">
    <TextBlock Text="Kit Box"
               FontSize="24"
               FontFamily="avares://KitBox_Project/Fonts#Anton"
               HorizontalAlignment="Center"/>
    
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="30,40,0,0">
      <Button Content="← Back"
              Background="Transparent"
              BorderBrush="Transparent"
              Foreground="Black"
              FontSize="16"
              Padding="0"
              HorizontalAlignment="Left"
              Click="OnRetourClick"/>

      <TextBlock Text="Pay My Order"
                 FontSize="22"
                 FontWeight="Bold"/>

      <TextBlock Margin="0,15,0,0">
        If you wish to place an order, you can pay using:
        <LineBreak />
        • Credit Card
        <LineBreak />
        • Bank Transfer
        <LineBreak />
        • Cash
        <LineBreak />
        
        <LineBreak />
        In-store, all payment methods can be combined!
      </TextBlock>

    </StackPanel>
  </Grid>

</UserControl>
