<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitBox_Project.Views.Door">
    <Grid>
        <StackPanel>
            <TextBlock Text="4. Choix de la porte" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,20,0,0"/>
            <TextBlock Text="Ajouter une porte ? :" Margin="0,50,0,5" HorizontalAlignment="Center"/>
            <ComboBox Name="Porte" Width="200" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <!-- Message d'erreur si la porte n'est pas sélectionnée -->
            <TextBlock x:Name="ErrorMessage" Text="Veuillez sélectionner une option de porte avant de continuer."
                       Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="False" Margin="0,10,0,20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0" Spacing="10">
            <Button Content="Back" Click="GoToHeight"/>
            <Button Content="Next" Click="GoToChoice"/>
        </StackPanel>
        <ContentControl x:Name="MainContent" Margin="50,0,0,0"/>
    </Grid>
</UserControl>