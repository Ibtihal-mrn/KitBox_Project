<!-- Choisir les dimensions-->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KitBox_Project.Door"
        Title="KitBox_Project">
    <StackPanel>

        <Button Content="Home" Click="GoToMainWindow" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <TextBlock Text="4. Choix de la porte" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
        
        <TextBlock Text="Hauteur :" Margin="0,50,0,5" HorizontalAlignment="Center"/>
        <ComboBox  Name="Longueur" Width="200" HorizontalAlignment="Center">
            <ComboBoxItem Content="Option 1" />
            <ComboBoxItem Content="Option 2" />
            <ComboBoxItem Content="Option 3" />
        </ComboBox>

        <!-- Mettre un résumé des dimensions -->

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
            <Button Content="Back" Click="GoToColor" Margin="5,0"/>
            <Button Content="Next" Click="GoToChoice" Margin="5,0"/>
        </StackPanel>

    </StackPanel>
</Window>
